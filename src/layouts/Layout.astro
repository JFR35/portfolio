---
import '/public/styles/inicio.css';
import 'bootstrap/dist/css/bootstrap.min.css';
import { Image } from 'astro:assets';
import moiImage from '/public/img/Moi.jpg';

const { title = "Juan Fajardo - Portfolio" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Portfolio de Juan Fajardo Reyes, Desarrollador Web especializado en IT Sanitario." />
    <title>{title}</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link href="https://fonts.googleapis.com/css2?family=Orbitron&display=swap" rel="stylesheet" />
  </head>
  <body>
    <main>
      <section id="inicio" class="section bg-space text-center d-flex align-items-center">
        <div class="container">
          <div class="row justify-content-center align-items-center">
            <div class="col-md-4 mb-4">
              <div class="profile-container">
                <Image src={moiImage} alt="Juan Fajardo Reyes" class="img-fluid rounded-circle shadow-lg profile-img" />
              </div>
            </div>
            <div class="col-md-8 text-white mb-4">
              <h1 class="display-3 fw-bold mb-3 retro-text">Juan Fajardo Reyes</h1>
              <p class="lead fs-4 mb-4">Desarrollador Web | Especialista en IT Sanitario</p>
              <p class="fs-5 mb-4">Grado Superior en Desarrollo de Aplicaciones Web | Certificación Open EHR</p>
              <div class="d-flex justify-content-center gap-3 flex-wrap">
                <a href="#proyectos" class="btn btn-retro btn-lg px-4 py-2 mt-3" aria-label="Ver proyectos">Ver Proyectos</a>
                <a href="/assets/CV_Juan_Fajardo_Reyes.pdf" class="btn btn-retro btn-lg px-4 py-2 mt-3" download aria-label="Descargar CV">Descargar CV</a>
                <a href="https://www.linkedin.com/in/juan-fajardo-reyes-39195753/" class="btn btn-retro btn-lg px-4 py-2 mt-3" aria-label="Perfil LinkedIn" target="_blank">LinkedIn</a>
              </div>
            </div>
            <div class="col-md-10 text-white">
              <p class="fs-5 mb-4">
                Soy un desarrollador web especializado en soluciones tecnológicas para entornos sanitarios, con experiencia en HL7v2, FHIR y Mirth Connect.
              </p>
            </div>
          </div>
        </div>
      </section>
      <slot />
    <footer class="bg-dark text-center py-3 text-white">
      <p>&copy; 2025 Juan Fajardo Reyes</p>
    </footer>
  </body>
</html>